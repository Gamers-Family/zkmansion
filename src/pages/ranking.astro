---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.vue'

const cards = [
  {
    title: 'Global',
    icon: 'global',
    link: '/ranking/global',
  },
  {
    title: 'Futbol',
    icon: 'futbol',
    link: '/ranking/futbol',
  },
  {
    title: 'Ajedrez',
    icon: 'ajedrez',
    link: '/ranking/ajedrez',
  },
  {
    title: 'Billar',
    icon: 'billar',
    link: '/ranking/billar',
  },
  {
    title: 'Dardos',
    icon: 'dardos',
    link: '/ranking/dardos',
  },
  {
    title: 'Matar',
    icon: 'matar',
    link: '/ranking/matar',
  },
  {
    title: 'Pañuelo',
    icon: 'pañuelo',
    link: '/ranking/pañuelo',
  },
  {
    title: 'Petanca',
    icon: 'petanca',
    link: '/ranking/petanca',
  },
  {
    title: 'Pong',
    icon: 'pong',
    link: '/ranking/pong',
  },
  {
    title: 'Valorant',
    icon: 'valorant',
    link: '/ranking/batalla',
  },
  {
    title: 'Pokémon',
    icon: 'pokémon',
    link: '/ranking/pokemon',
  },
]
---

<Layout title="Ranking">
  <div class="page-title">
    <h2>Rankings</h2>
  </div>
  <div class="cards">
    {
      cards.map((item) => (
        <Card
          title={item.title}
          theme="ranking"
          icon={item.icon}
          link={item.link}
        />
      ))
    }
  </div>
</Layout>

<style lang="scss">
  .cards {
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    padding: 10px;
  }
</style>
