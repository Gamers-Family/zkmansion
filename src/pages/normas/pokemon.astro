---
import Layout from '../../layouts/Layout.astro'
import Normas from '../../components/Normas.vue'
const reglas = [
'Será una batalla individual con un máximo de 6 pokémons.',
'El objetivo es derrotar a todos los pokémons del rival o el máximo numero posible dentro del tiempo establecido (20 min).',
]
const normas = [
'Nivel igualado al 50.',
'Equipar objetos está permitido.',
'Esta prohibido tener Pokémons repetidos en el equipo.',
'Los Pokémons Legendarios están prohibidos, pero si estan permitidos lotos los paradox y pokémons de evento.'
]
---

<Layout title="NormasPokémon">
  <a href="/normas">
    <img class="back" src="/icons/back.svg" alt="<" />
    <h1>Pokémon</h1>
  </a>
  <div class="rule">
    <h2>Reglas</h2>
    <Normas reglas={reglas} />
    <h2>Normas</h2>
    <Normas normas={normas} />
  </div>
</Layout>

<style lang="scss">
  a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    h1 {
      margin: 0;
      gap: 10px;
      flex-grow: 1;
      text-align: center;
    }
    .back {
      margin-left: 20px;
      width: 30px;
    }
  }
  .rule {
    margin: 30px;
  }
</style>

