---
import Layout from '../../layouts/Layout.astro'

const { torneo } = Astro.params
---

<Layout title="Torneo">
  <a href="/torneos">
    <img class="back" src="/icons/back.svg" alt="<" />
    <div class="page-title">
      <img src="/icons/pelota.svg" />
      <h2>{torneo}</h2>
    </div>
  </a>
</Layout>

<style lang="scss">
  .page-title {
    display: flex;
    justify-content: center;
    gap: 10px;

    h2 {
      text-align: center;
    }

    img {
      width: 30px;
    }
  }

  .back {
    position: absolute;
    margin-top: 22px;
    margin-left: 20px;
    width: 30px;
  }
</style>
