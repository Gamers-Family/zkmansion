---
import Layout from '../layouts/Layout.astro'
import Horario from '../components/Horario.vue'

const users = Array(4).fill({
  fecha: 'Dia 1 - 22:00',
  title: 'Fiest√≥n Tomorrowland ZK Mansion Power 3000',
  icono: 'pistola',
})
---

<Layout title="Horarios">
  <div class="title">
    <h2>Horarios</h2>
  </div>
  <div class="cards">
    {users.map((item) => <Horario fecha={item.fecha} title={item.title} />)}
  </div>
</Layout>

<style lang="scss">
  .title {
    display: flex;
    justify-content: center;
    gap: 10px;

    h2 {
      text-align: center;
    }
  }

  .cards {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
</style>
